	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
    
	<listener>
		<listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>	
	</listener>
	
	<listener>
		<listener-class>
			org.springframework.web.util.IntrospectorCleanupListener</listener-class>
	</listener>
	
	<listener>
		<listener-class>
			org.springframework.web.context.request.RequestContextListener</listener-class>
	</listener>
	
	<filter>
		<filter-name>encodingFilter</filter-name>
		<filter-class>
			org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
		<init-param>
			<param-name>forceEncoding</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter>
		<filter-name>authenticationFilter</filter-name>
		<filter-class>
			com.mongolia.website.controler.filter.AuthenticationFilter
		</filter-class>	
		<init-param>
			<param-name>authurls</param-name>
			<param-value>
			<![CDATA[checkdocument.do,astopwriting.do,userlist.do,sitemanagerindex.do,articlelist.do,stopuser.do,reuseuser.do,deleteuser.do,getopinions.do,viewopinion.do,getOpinionContent.do,addopinions.do,toaddopinion.do,advert.do,
				addadvert.do,edituserinfo.do,addfriend.do,toadddoc.do,imgupload.do,adddoc.do,toupddoc.do,deletedoc.do,updatedoc.do,addimggroup.do,updimggroup.do,addimg.do,dodeleteimggroup.do,addCommentOnResource.do,
				shareUserresource.do,markUserresource.do,delresourcecomment.do,sendMessage.do,createsitepage.do
			]]>
			</param-value>
		</init-param>
		<init-param>
			<param-name>adminurls</param-name>
			<param-value>
			<![CDATA[articlelist.do,checkdocument.do,astopwriting.do,userlist.do,stopuser.do,reuseuser.do,deleteuser.do,getopinions.do,viewopinion.do,getOpinionContent.do,createsitepage.do]]>
			</param-value>
		</init-param>		
	</filter>
	<filter-mapping>
		<filter-name>authenticationFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<servlet>
		<servlet-name>webdispatcher</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>classpath:/resources/dispatcher-servlet.xml</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>  
	<servlet>
		<servlet-name>VerifyCodeServlet</servlet-name>
		<servlet-class>com.mongolia.website.controler.VerifyCodeServlet</servlet-class>
	</servlet> 
	<servlet-mapping>
		<servlet-name>webdispatcher</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>VerifyCodeServlet</servlet-name>
		<url-pattern>/verifyCodeServlet</url-pattern>
	</servlet-mapping>
	<session-config>
		<session-timeout>1000</session-timeout>
	</session-config>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
	<error-page>
		<error-code>500</error-code>
		<location>/error.jsp</location>
	</error-page>
</web-app>
